<%- include('partials/header'); -%>
<div class="blog-container">
  <div class="col-md-12">

    <div class="jumbotron  jumbotron-fluid post-container latest-posts-container bg-dark">
      <div class="container">
        <h1 class="display-4 post-title latest-posts-hero bg-dark  text-light">
          Latest Posts
          <hr>
        </h1>
      </div>
    </div>

    <% for(var i=0;i<posts.length;i++){ %>
    <div class="jumbotron  jumbotron-fluid post-container bg-dark ">
      <div class="container ">
        <h1 class="display-4 post-title text-light">
          <%= posts[i].title %>
        </h1>
        <p class="lead post-content content-color">

          <%= posts[i].content.substring(0,300) %>...
        </p>
        <div class="row post-details">
          <label class="post-published content-color">Published On <span class="date text-light">
              <%= posts[i].date %> on <%= posts[i].time %>
            </span></label>
          <a href="/posts/<%= posts[i].title %>"><button class="read-more bg-dark text-light">
            Read More
          </button></a>
        </div>
      </div>
    </div>

    <% } %>

  </div>
  <div class="legal">
    <a href="#" class="text-light">Made with <span style="color:red">&hearts;</span> by iTsDinesh</a>
</div>
</div>

<%- include('partials/footer'); -%>